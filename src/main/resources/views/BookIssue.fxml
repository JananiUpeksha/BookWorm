                <Font name="DejaVuMathTeXGyre-Regular" size="14.0" />
            </font>
        </TextField>
        <TextField fx:id="txtAuthor" layoutX="87.0" layoutY="170.0" prefHeight="45.0" prefWidth="256.0" promptText="Author" style="-fx-background-radius: 15;">
            <font>
                <Font name="DejaVuMathTeXGyre-Regular" size="14.0" />
            </font>
        </TextField>
        <TextField fx:id="txtAvailable" layoutX="460.0" layoutY="170.0" prefHeight="45.0" prefWidth="256.0" promptText="Available" style="-fx-background-radius: 15;">
